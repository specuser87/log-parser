
import os
from datetime import datetime

def generate_summary_report(total_entries, info, warning, error, first_timestamp, last_timestamp,
                            output_folder="Output", filename="total_report.txt"):
    """
    Generate a summary report of log statistics and save to a file.
    """
    if not os.path.exists(output_folder):
        os.mkdir(output_folder)

    report_file = os.path.join(output_folder, filename)
    with open(report_file, "w") as f:
        f.write("TOTAL LOG SUMMARY REPORT\n")
        f.write("------------------------\n")
        f.write(f"Total entries: {total_entries}\n")
        f.write(f"INFO entries: {info}\n")
        f.write(f"WARNING entries: {warning}\n")
        f.write(f"ERROR entries: {error}\n")
        f.write(f"First timestamp: {first_timestamp}\n")
        f.write(f"Last timestamp: {last_timestamp}\n")

    print(f"Summary report saved to {report_file}")
    return report_file


# ---------- Usage Example ----------
if __name__ == "__main__":
    total_entries = 10
    info = 5
    warning = 3
    error = 2
    first_ts = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    last_ts = first_ts

    generate_summary_report(total_entries, info, warning, error, first_ts, last_ts)
